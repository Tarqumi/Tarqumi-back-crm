{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "designSystem": {
    "name": "Clinova Modern Minimalist System",
    "description": "A high-contrast, heavily rounded, minimalist design system supporting both LTR and RTL layouts. Relies on stark black-and-white contrasts with subtle gray backgrounds and specific semantic colors for statuses.",
    "principles": "simple",
    "tokens": {
      "colors": {
        "brand": {
          "primary": "#000000",
          "primaryText": "#FFFFFF"
        },
        "background": {
          "app": "#F8F9FA",
          "surfacePrimary": "#FFFFFF",
          "surfaceSecondary": "#F3F4F6",
          "surfaceDark": "#0A0A0A",
          "surfaceDarkHighlight": "rgba(255, 255, 255, 0.05)"
        },
        "text": {
          "primary": "#111827",
          "secondary": "#6B7280",
          "muted": "#9CA3AF",
          "inverse": "#FFFFFF"
        },
        "semantic": {
          "success": { "bg": "#ECFDF5", "text": "#10B981", "iconBg": "#D1FAE5" },
          "error": { "bg": "#FEF2F2", "text": "#EF4444", "border": "#FCA5A5" },
          "warning": { "bg": "#FFFBEB", "text": "#F59E0B", "iconBg": "#FEF3C7" },
          "info": { "bg": "#EFF6FF", "text": "#3B82F6", "iconBg": "#DBEAFE" },
          "neutral": { "bg": "#F3F4F6", "text": "#6B7280", "iconBg": "#E5E7EB" }
        },
        "border": {
          "subtle": "#E5E7EB",
          "focus": "#D1D5DB"
        }
      },
      "typography": {
        "fontFamily": "System Sans-Serif, Inter, Tajawal, sans-serif",
        "weights": {
          "regular": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "sizes": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem"
        }
      },
      "radii": {
        "sm": "0.25rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem",
        "2xl": "1.5rem",
        "pill": "9999px"
      },
      "spacing": {
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "12": "3rem"
      },
      "shadows": {
        "card": "0 1px 3px 0 rgba(0, 0, 0, 0.05), 0 1px 2px 0 rgba(0, 0, 0, 0.03)",
        "dropdown": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
      }
    },
    "components": {
      "buttons": {
        "primary": {
          "backgroundColor": "{colors.brand.primary}",
          "color": "{colors.brand.primaryText}",
          "borderRadius": "{radii.pill}",
          "padding": "{spacing.3} {spacing.6}",
          "fontWeight": "{typography.weights.medium}",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "{spacing.2}"
        },
        "iconContainer": {
          "backgroundColor": "{colors.brand.primary}",
          "color": "{colors.text.inverse}",
          "borderRadius": "{radii.pill}",
          "padding": "{spacing.2}"
        }
      },
      "inputs": {
        "text": {
          "backgroundColor": "{colors.background.surfaceSecondary}",
          "border": "1px solid transparent",
          "borderRadius": "{radii.lg}",
          "padding": "{spacing.3} {spacing.4}",
          "color": "{colors.text.primary}",
          "placeholderColor": "{colors.text.muted}",
          "iconColor": "{colors.text.muted}"
        },
        "select": {
          "backgroundColor": "{colors.background.surfacePrimary}",
          "border": "1px solid {colors.border.subtle}",
          "borderRadius": "{radii.md}",
          "padding": "{spacing.2} {spacing.3}"
        }
      },
      "cards": {
        "base": {
          "backgroundColor": "{colors.background.surfacePrimary}",
          "borderRadius": "{radii.xl}",
          "padding": "{spacing.6}",
          "boxShadow": "{shadows.card}"
        },
        "heroDark": {
          "backgroundColor": "{colors.background.surfaceDark}",
          "color": "{colors.text.inverse}",
          "borderRadius": "{radii.2xl}",
          "padding": "{spacing.8}",
          "backgroundImage": "radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px)",
          "backgroundSize": "20px 20px"
        },
        "statPill": {
          "backgroundColor": "{colors.background.surfacePrimary}",
          "borderRadius": "{radii.pill}",
          "padding": "{spacing.3} {spacing.5}",
          "display": "flex",
          "alignItems": "center",
          "gap": "{spacing.3}"
        },
        "kanbanColumn": {
          "backgroundColor": "{colors.background.surfacePrimary}",
          "borderRadius": "{radii.xl}",
          "padding": "{spacing.6}",
          "minHeight": "200px",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center",
          "color": "{colors.text.muted}"
        }
      },
      "navigation": {
        "sidebar": {
          "backgroundColor": "{colors.background.surfacePrimary}",
          "width": "250px",
          "item": {
            "default": {
              "color": "{colors.text.secondary}",
              "borderRadius": "{radii.lg}",
              "padding": "{spacing.3} {spacing.4}"
            },
            "active": {
              "backgroundColor": "{colors.brand.primary}",
              "color": "{colors.brand.primaryText}",
              "borderRadius": "{radii.pill}"
            }
          }
        }
      },
      "alerts": {
        "banner": {
          "backgroundColor": "{colors.semantic.error.bg}",
          "color": "{colors.semantic.error.text}",
          "padding": "{spacing.2}",
          "textAlign": "center",
          "display": "flex",
          "justifyContent": "center",
          "alignItems": "center",
          "gap": "{spacing.2}",
          "fontSize": "{typography.sizes.sm}"
        }
      },
      "badges": {
        "percentage": {
          "borderRadius": "{radii.pill}",
          "padding": "{spacing.1} {spacing.2}",
          "fontSize": "{typography.sizes.xs}",
          "fontWeight": "{typography.weights.medium}"
        }
      }
    },
    "layout": {
      "app": {
        "display": "flex",
        "height": "100vh",
        "sidebar": "fixed or sticky left/right (depending on LTR/RTL)",
        "main": "flex-1 background-app overflow-y-auto"
      },
      "splitScreenAuth": {
        "display": "grid",
        "gridTemplateColumns": "1fr 1fr",
        "leftPanel": "dark theme, centered content, background textures",
        "rightPanel": "light theme, form container centered, max-width defined"
      },
      "grid": {
        "dashboardStats": "grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
      }
    }
  }
}